<Page
    x:Class="EntertaimentGroup.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EntertaimentGroup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    mc:Ignorable="d">

    <Grid Background="#F3F3F3">
        <!--Gọi lsvMenuMianControl-->
        <ListView x:ConnectionId='1' x:Name="lstMenuMain" Margin="20" HorizontalAlignment="Stretch"                                                                                          >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"></ItemsWrapGrid>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Ellipse x:ConnectionId='2' x:Name="x"                                 Stroke="Black" MinWidth="100" StrokeThickness="0.9" Margin="0,5">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding thumbail}"></ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="{Binding name}" FontSize="19" Foreground="Black" HorizontalAlignment="Center" FontWeight="SemiBold"></TextBlock>
                            <TextBlock Text="{Binding description}" FontSize="12" Foreground="Black" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

